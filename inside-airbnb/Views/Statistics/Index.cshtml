@model StatisticsViewModel

@{
    ViewData["Title"] = "Statistics";
}
<h1>@ViewData["Title"]</h1>

<p>Statistics page.</p>

<div style="height:300px; width:300px">
    <canvas id="myChart" width="200" height="200"></canvas>
</div>

<div style="height:700px; width:700px">
    <canvas id="averagePriceNeighbourhood" width="300" height="300"></canvas>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js" integrity="sha512-QSkVNOCYLtj73J4hbmVoOV6KVZuMluZlioC+trLpewV8qMjsWqlIQvkn1KGX2StWvPMdWGBqim1xlC8krl1EKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    const ct1 = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ct1, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    const chart2 = document.getElementById('averagePriceNeighbourhood').getContext('2d');
    const averageNeighbourhoodPriceChart = new Chart(chart2, {
        type: 'bar',
        data: {
            labels: @Json.Serialize(Model.NeighbourhoodPrices.Neighbourhoods),
            datasets: [{
                label: 'Average Price',
                data: @Json.Serialize(Model.NeighbourhoodPrices.AveragePrices),
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>